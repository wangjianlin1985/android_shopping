<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="OrderDetail" table="OrderDetail">

          <!-- 主键记录编号 -->
          <id name="detailId" column="detailId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 定单编号 -->
          <many-to-one name="orderObj"
            column="orderObj"
            class="OrderInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 多对一属性: 商品名称 -->
          <many-to-one name="productObj"
            column="productObj"
            class="ProductInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单浮点型属性: 商品单价 -->
          <property
            name="price"
            column="price"
            type="float"
          />

          <!-- 简单整型属性: 订购数量 -->
          <property
            name="count"
            column="count"
            type="int"

          />


		 
		
	</class>
	
</hibernate-mapping>
 
